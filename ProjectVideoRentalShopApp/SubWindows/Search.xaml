<UserControl x:Class="ProjectVideoRentalShopApp.SubWindows.Search"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectVideoRentalShopApp.SubWindows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer Margin="0,2,0,0">
        <Grid Name="MovieGrid" ShowGridLines="False" Background="Gray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBox Name="Searchbox" PreviewMouseLeftButtonDown="textbox_PreviewMouseLeftButtonDown" Text="Sök" Grid.Column="2" Grid.ColumnSpan="2" Height="50" BorderThickness="1.5" VerticalContentAlignment="Center"/>
        </Grid>
    </ScrollViewer>
</UserControl>
